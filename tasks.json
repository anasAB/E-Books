//run ESLint with auto-fix:
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "eslint fix",
            "type": "shell",
            "command": "npx eslint --fix ${file}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        }
    ]
}